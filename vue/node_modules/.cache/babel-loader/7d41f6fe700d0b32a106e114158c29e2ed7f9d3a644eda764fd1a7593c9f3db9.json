type=\"textarea\" placeholder=\"请输入评论内容\" v-model=\"commentContent\"></el-input>\r\n            <div style=\"text-align: right; margin-top: 5px\">\r\n              <el-button type=\"primary\" @click=\"addComment\">评 论</el-button>\r\n            </div>\r\n          </div>\r\n\r\n          <div>\r\n            <div style=\"display: flex; grid-gap: 20px; margin-bottom: 20px\" v-for=\"item in commentList\" :key=\"item.id\">\r\n              <img :src=\"item.avatar\" alt=\"\" style=\"width: 50px; height: 50px; border-radius: 50%\">\r\n              <div style=\"flex: 1\">\r\n                <!--                这是第一级评论-->\r\n                <div style=\"margin-bottom: 10px\">\r\n                  <div style=\"color: #666; margin-bottom: 10px\">{{ item.userName }}</div>\r\n                  <div style=\"color: #444; margin-bottom: 10px\">{{ item.content }}</div>\r\n                  <div style=\"color: #888; font-size: 13px\"><span style=\"margin-right: 20px\">{{ item.time }}</span>\r\n                    <span style=\"cursor: pointer\"><i class=\"el-icon-s-comment\"></i>评论</span>\r\n                  </div>\r\n                </div>\r\n                <!--                这是回复-->\r\n                <div style=\"display: flex;  grid-gap: 20px; margin-bottom: 20px\" v-for=\"sub in item.children\" :key=\"item.id\">\r\n                  <img :src=\"sub.avatar\" alt=\"\" style=\"width: 50px; height: 50px; border-radius: 50%\">\r\n                  <div style=\"flex: 1\">\r\n                    <div style=\"color: #666; margin-bottom: 10px\">{{ sub.userName }} <span style=\"color: #333\" v-if=\"sub.replyUser !== item.userName\">回复  {{ sub.replyUser }}</span></div>\r\n                    <div style=\"color: #444; margin-bottom: 10px\">{{ sub.content }}</div>\r\n                    <div style=\"color: #888; font-size: 13px\"><span style=\"margin-right: 20px\">{{ sub.time }}</span>\r\n                      <span style=\"cursor: pointer\"><i class=\"el-icon-s-comment\"></i>评论</span>\r\n                    </div>\r\n                  </div>\r\n                </div>\r\n              </div>\r\n            </div>\r\n          </div>\r\n        </div>\r\n        <!--  评论结束  -->\r\n      </div>\r\n\r\n      <div style=\"width: 260px\">\r\n        <div class=\"card\" style=\"margin-bottom: 10px\">\r\n          <div style=\"display: flex; align-items: center; grid-gap: 10px; margin-bottom: 10px\">\r\n            <img :src=\"blog.user?.avatar\" alt=\"\" style=\"width: 50px; height: 50px; border-radius: 50%\">\r\n            <div style=\"flex: 1;\">\r\n              <div style=\"font-weight: bold; margin-bottom: 5px\">{{ blog.user?.name }}</div>\r\n              <div style=\"color: #666; font-size: 13px\" class=\"line2\">{{ blog.user?.info }}</div>\r\n            </div>\r\n          </div>\r\n\r\n          <div style=\"display: flex\">\r\n            <div style=\"flex: 1; text-align: center\">\r\n              <div style=\"margin-bottom: 5px\">文章</div>\r\n              <div style=\"color: #888\">10</div>\r\n            </div>\r\n            <div style=\"flex: 1; text-align: center\">\r\n              <div style=\"margin-bottom: 5px\">点赞</div>\r\n              <div style=\"color: #888\">10</div>\r\n            </div>\r\n            <div style=\"flex: 1; text-align: center\">\r\n              <div style=\"margin-bottom: 5px\">收藏</div>\r\n              <div style=\"color: #888\">10</div>\r\n            </div>\r\n          </div>\r\n        </div>\r\n\r\n        <div class=\"card\" style=\"margin-bottom: 10px\">\r\n          <div style=\"font-weight: bold; font-size: 20px; padding-bottom: 10px; border-bottom: 1px solid #ddd; margin-bottom: 10px\">相关推荐</div>\r\n\r\n          <div>\r\n            <div style=\"margin-bottom: 15px\" v-for=\"item in recommendList\" :key=\"item.id\">\r\n              <a :href=\"'/front/blogDetail?blogId=' + item.id\" target=\"_blank\"><div class=\"recommend-title line2\">{{ item.title }}</div></a>\r\n              <div style=\"color: #888\">\r\n                <span>阅读</span> <span>{{ item.readCount }}</span>\r\n                <span style=\"margin-left: 10px\">点赞</span> <span>{{ item.likesCount }}</span>\r\n              </div>\r\n            </div>\r\n          </div>\r\n        </div>\r\n\r\n        <div class=\"card\">\r\n          <div style=\"display: flex; grid-gap: 10px; \">\r\n            <div style=\"flex: 1; line-height: 25px\">\r\n              找对属于你的学习圈子\r\n              扫码学习精品项目\r\n            </div>\r\n            <img src=\"@/assets/imgs/广告.png\" alt=\"\" style=\"width: 50px; height: 50px; border-radius: 5px\">\r\n          </div>\r\n        </div>\r\n\r\n      </div>\r\n\r\n\r\n\r\n    </div>\r\n\r\n    <Footer />\r\n  </div>\r\n</template>\r\n\r\n<script>\r\nimport Footer from \"@/components/Footer\";\r\nimport comment from \"@/views/manager/Comment\";\r\nexport default {\r\n  name: \"BlogDetail\",\r\n  components: {\r\n    Footer\r\n  },\r\n  data() {\r\n    return {\r\n      blogId: this.$route.query.blogId,\r\n      blog: {},\r\n      tagsArr: [],\r\n      recommendList: []\r\n    }\r\n  },\r\n  created() {\r\n    this.load()\r\n  },\r\n  methods: {\r\n    loadComment() {\r\n      this.$request.get('/comment/selectForUser', {\r\n        params: {  fid: this.blogId, module: '博客' }\r\n      }).then(res => {\r\n        this.commentList = res.data || []\r\n      })\r\n    },\r\n    addComment(){\r\n      this.$request.post('/comment/add',{comment: this.commentContext}).then(res=>{\r\n        if (res.code === '200') {\r\n          //this.$message.success('操作成功')\r\n\r\n          comment: ''\r\n          this.loadComment()  // 重新加载数据\r\n        }\r\n      })\r\n    },\r\n    setLikes() {\r\n      this.$request.post('/likes/set', {  fid: this.blogId, module: '博客' }).then(res => {\r\n        if (res.code === '200') {\r\n          //this.$message.success('操作成功')\r\n\r\n          this.load()  // 重新加载数据\r\n        }\r\n      })\r\n    },\r\n    setCollect() {\r\n      this.$request.post('/collect/set', {  fid: this.blogId, module: '博客' }).then(res => {\r\n        if (res.code === '200') {\r\n          //this.$message.success('操作成功')\r\n\r\n          this.load()  // 重新加载数据\r\n        }\r\n      })\r\n    },\r\n    load() {\r\n      this.$request.get('/blog/selectById/' + this.blogId).then(res => {\r\n        this.blog = res.data || {}\r\n\r\n        this.tagsArr = JSON.parse(this.blog.tags || '[]')\r\n      })\r\n      this.$request.get('/blog/selectRecommend/' + this.blogId).then(res => {\r\n        this.recommendList = res.data || []\r\n      })\r\n    }\r\n  }\r\n}\r\n</script>\r\n\r\n<style>\r\n/* blockquote 样式 */\r\nblockquote {\r\n  display: block;\r\n  border-left: 8px solid #d0e5f2;\r\n  padding: 20px 10px;\r\n  margin: 10px 0;\r\n  line-height: 1.4;\r\n  font-size: 100%;\r\n  background-color: #f1f1f1;\r\n}\r\n\r\n/* code 样式 */\r\ncode {\r\n  display: inline-block;\r\n  *display: inline;\r\n  *zoom: 1;\r\n  background-color: #f1f1f1;\r\n  border-radius: 3px;\r\n  padding: 3px 5px;\r\n  margin: 0 3px;\r\n}\r\npre code {\r\n  display: block;\r\n}\r\np {\r\n  line-height: 30px\r\n}\r\n</style>"],"mappings":"AAgIA,OAAAA,MAAA;AACA,OAAAC,OAAA;AACA;EACAC,IAAA;EACAC,UAAA;IACAH;EACA;EACAI,KAAA;IACA;MACAC,MAAA,OAAAC,MAAA,CAAAC,KAAA,CAAAF,MAAA;MACAG,IAAA;MACAC,OAAA;MACAC,aAAA;IACA;EACA;EACAC,QAAA;IACA,KAAAC,IAAA;EACA;EACAC,OAAA;IACAC,YAAA;MACA,KAAAC,QAAA,CAAAC,GAAA;QACAC,MAAA;UAAAC,GAAA,OAAAb,MAAA;UAAAc,MAAA;QAAA;MACA,GAAAC,IAAA,CAAAC,GAAA;QACA,KAAAC,WAAA,GAAAD,GAAA,CAAAjB,IAAA;MACA;IACA;IACAmB,WAAA;MACA,KAAAR,QAAA,CAAAS,IAAA;QAAAvB,OAAA,OAAAwB;MAAA,GAAAL,IAAA,CAAAC,GAAA;QACA,IAAAA,GAAA,CAAAK,IAAA;UACA;;UAEAzB,OAAA;UACA,KAAAa,WAAA;QACA;MACA;IACA;;IACAa,SAAA;MACA,KAAAZ,QAAA,CAAAS,IAAA;QAAAN,GAAA,OAAAb,MAAA;QAAAc,MAAA;MAAA,GAAAC,IAAA,CAAAC,GAAA;QACA,IAAAA,GAAA,CAAAK,IAAA;UACA;;UAEA,KAAAd,IAAA;QACA;MACA;IACA;;IACAgB,WAAA;MACA,KAAAb,QAAA,CAAAS,IAAA;QAAAN,GAAA,OAAAb,MAAA;QAAAc,MAAA;MAAA,GAAAC,IAAA,CAAAC,GAAA;QACA,IAAAA,GAAA,CAAAK,IAAA;UACA;;UAEA,KA